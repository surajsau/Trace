<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/button_black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start"
        android:textColor="@color/color_text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/profile_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_picture"
        app:layout_constraintTop_toTopOf="@id/profile_picture"
        tools:text="Suraj Kumar Sau" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_handle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textColor="@color/color_text_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/profile_name"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        tools:text="surajsau" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_profile_description"
        android:includeFontPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:textColor="@color/color_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        tools:text="よろしくお願いします！" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_organisation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/ic_profile_organisation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_description"
        tools:text="Goodpatch" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/ic_profile_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_organisation"
        tools:text="Remote" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/ic_profile_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_location"
        tools:text="surajsau.in" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        app:drawableLeftCompat="@drawable/ic_profile_followers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_url"
        tools:text="13 followers" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_following_followers_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:text="・"
        android:textColor="@color/color_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_followers"
        app:layout_constraintStart_toEndOf="@id/profile_followers"
        app:layout_constraintTop_toTopOf="@id/profile_followers" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="12dp"
        android:gravity="start"
        android:textColor="@color/color_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_followers"
        app:layout_constraintStart_toEndOf="@id/profile_following_followers_divider"
        app:layout_constraintTop_toTopOf="@id/profile_followers"
        tools:text="13 following" />
</androidx.constraintlayout.widget.ConstraintLayout>