<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/bg_view_item_ripple">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/content_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/content_image"
            android:textColor="@color/color_text_gray"
            android:layout_marginStart="10dp"
            tools:text="2017-12-28"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/content_release_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_release_date"
            android:textColor="@color/color_text"
            android:textSize="18sp"
            tools:text="ヒューマン フォール フラット"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content_disclaimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/content_release_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_title"
            android:textColor="@color/color_text"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="ヒューマン フォール フラット"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>